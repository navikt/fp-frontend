{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "test",
          "tsc",
          "eslint",
          "build"
        ]
      }
    }
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*"
    ],
    "prod": [
      "!{projectRoot}/**/*.spec.tsx"
    ],
    "production": [
      "default"
    ]
  },
  "targetDefaults": {
    "test": {
      "inputs": [
        "default",
        "^prod",
        "{workspaceRoot}/jest-config/jest.config.ts"
      ],
      "dependsOn": [
        "build"
      ]
    },
    "tsc": {
      "inputs": [
        "default",
        "{workspaceRoot}/tsconfig.json"
      ],
      "dependsOn": [
        "build"
      ]
    },
    "eslint": {
      "inputs": [
        "default",
        "{workspaceRoot}/eslint/*.js"
      ],
      "dependsOn": [
        "build"
      ]
    },
    "build": {
      "inputs": [
        "prod"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json"
}
