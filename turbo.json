{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "turbo.json",
    "yarn.lock",
    "stylelint.config.cjs",
    "knip.ts",
    "Dockerfile",
    ".prettierrc",
    "packages/config/eslint/eslint.config.mjs",
    "packages/config/typescript/tsconfig.json",
    "packages/config/vite/vite.config.mjs"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "tsc": {
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^eslint", "^stylelint"],
      "outputs": []
    },
    "eslint": {
      "outputs": []
    },
    "stylelint": {
      "outputs": []
    },
    "prettier": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build", "^test"],
      "outputs": []
    },
    "build-storybook": {
      "outputs": [".storybook-static-build/**"]
    },
    "build": {
      "dependsOn": ["^build", "tsc"],
      "outputs": ["dist"]
    },
    "clean": {
      "cache": false
    }
  }
}
