{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "node",
    "types": ["node", "vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "allowJs": true,
    "noEmit": true,
    "strictBindCallApply": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "./@types", "./node_modules"],
    "skipLibCheck": true
  },
  "include": ["packages/**/*", "apps/**/*", "@types"]
}
