{
	"compilerOptions": {
		"target": "esnext",
		"module": "es2020",
		"moduleResolution": "node",
		"types": [ "node", "vitest/globals", "@testing-library/jest-dom" ],
		"allowJs": true,
		"noEmit": true,
		"strict": false,
		"strictBindCallApply": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"jsx": "react",
		"typeRoots": ["./node_modules/@types", "./@types"],
		"baseUrl": "packages/",
		"skipLibCheck": true,
	},
	"include": [
		"packages/**/*",
		"@types"
	],

}
